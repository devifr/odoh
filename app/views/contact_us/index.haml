#content
  .map
    %iframe{"src" => "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.2881104616467!2d106.85278335!3d-6.22569215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f38ff1406d51%3A0x63a35d63a660f76b!2sAQL+Center!5e0!3m2!1sen!2sid!4v1436433655562", "width" => "600", "height" => "450", "frameborder" => "0", "style" => "border:0"}
  .container
    .row
      .col-lg-12
        = bootstrap_flash
        %h4 Get in touch with us by filling
        %strong contact form below
        = form_for @contact, url: contact_us_path, html: {id: 'contactform', class: 'validateform', name: 'send-contact'} do |f|
          #sendmessage
            Your message has been sent. Thank you!
          .row
            .col-lg-6.field
              = f.text_field :name, placeholder: '* Enter your full name', 'data-rule': 'maxlen:4', 'data-msg': 'Please enter at least 4 chars'
              .validation
            .col-lg-6.field
              = f.text_field :email, placeholder: '* Enter your Email Address', 'data-rule': 'email', 'data-msg': 'Please enter a valid email'
              .validation
            .col-lg-12.margintop10
              = f.text_area :message, class: 'input-block-level', rows: 12, placeholder: "* Your message here...", "data-rule": 'required', 'data-msg': "Please write something"
              .validation
              %p
                = f.submit :submit, class: "btn btn-theme margintop10 pull-left", value: "Submit message"
                %span.pull-right.margintop20 * Please fill all required form field, thanks!
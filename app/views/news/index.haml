.row.mar-bot40
  .col-md-offset-3.col-md-6
    .sections-header
      %h2 News
#content
  .container
    .row
      .col-lg-8
        - @news.each do |row|
          %article
            .post-image
              .post-heading
                %h3
                  = link_to row.title, news_path(row)
              = image_tag row.images.url(:medium)
            %p
              = truncate_html(row.body, length: 250)
            .bottom-article
              %ul.meta-post
                %li
                  %i.icon-calendar
                  = link_to row.created_at, '#'
                %li
                  %i.icon-user
                  = link_to row.author, '#'
              = link_to 'Continue reading', '', class: "pull-right"
      .col-lg-4
        %aside.right-sidebar
          .widget
            %form.form-search
              %input.form-control{"type"=>"text", "placeholder"=>"Search.."}
          .widget
            %h5.widgetheading Latest posts
            %ul.recent
              - @latest_news.each do |row|
                %li
                  = image_tag row.images.url(:thumb), class: "pull-left"
                  %h6
                    = link_to row.title, news_path(row)
                  %p
                    = truncate_html(row.body, length: 100)